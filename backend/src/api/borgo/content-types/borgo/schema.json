{
  "kind": "collectionType",
  "collectionName": "borgos",
  "info": {
    "singularName": "borgo",
    "pluralName": "borgos",
    "displayName": "Panoramica Borghi"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string"
    },
    "regione": {
      "type": "string"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "descrizione": {
      "type": "text"
    },
    "payoff": {
      "type": "string"
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "categoria": {
      "type": "enumeration",
      "enum": [
        "montagna",
        "mare",
        "collina",
        "lago",
        "parconaturale",
        "culturastoria",
        "enogastronomia",
        "patrimoniounesco"
      ]
    },
    "geo_lat": {
      "type": "decimal"
    },
    "geo_lng": {
      "type": "decimal"
    },
    "attivo": {
      "type": "boolean",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "categoria"
            },
            ""
          ]
        }
      },
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "nome"
    }
  }
}
